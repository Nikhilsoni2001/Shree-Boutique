<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|bottom"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.customers.CustomerBottomFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_back"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_length"
            app:layout_constraintEnd_toStartOf="@+id/tv_salwarPlazo"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.41000003"
            app:tint="@color/main_color" />

        <TextView
            android:id="@+id/tv_salwarPlazo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/salwar_plazo_heading"
            android:textSize="26sp"
            android:textColor="@color/main_color"
            android:fontFamily="@font/ubuntu_bold"
            android:layout_margin="22dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tv_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="38dp"
            android:includeFontPadding="false"
            android:text="@string/length"
            android:fontFamily="@font/ubuntu_bold"
            android:textSize="24sp"
            android:textColor="@color/main_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_salwarPlazo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/el_length"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/el_length"
            style="@style/InputLayoutStyle"
            android:layout_width="201dp"
            android:layout_height="69dp"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.94"
            app:layout_constraintLeft_toRightOf="@id/tv_length"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_salwarPlazo">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_length"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="false"
                android:fontFamily="@font/ubuntu_medium"
                android:imeOptions="actionNext"
                android:includeFontPadding="false"
                android:inputType="number"
                android:maxLines="1"
                android:textAlignment="center"
                android:textSize="24sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_pauncha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/ubuntu_bold"
            android:includeFontPadding="false"
            android:text="@string/pauncha"
            android:textColor="@color/main_color"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/el_pauncha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_length" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/el_pauncha"
            style="@style/InputLayoutStyle"
            android:layout_width="201dp"
            android:layout_height="69dp"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.94"
            app:layout_constraintLeft_toRightOf="@id/tv_pauncha"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/el_length">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_pauncha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="false"
                android:fontFamily="@font/ubuntu_medium"
                android:imeOptions="actionNext"
                android:includeFontPadding="false"
                android:inputType="number"
                android:maxLines="1"
                android:textAlignment="center"
                android:textSize="24sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_assan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="58dp"
            android:fontFamily="@font/ubuntu_bold"
            android:includeFontPadding="false"
            android:text="@string/assan"
            android:textColor="@color/main_color"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/el_assan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_pauncha" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/el_assan"
            style="@style/InputLayoutStyle"
            android:layout_width="201dp"
            android:layout_height="69dp"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.94"
            app:layout_constraintLeft_toRightOf="@id/tv_assan"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/el_pauncha">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_assan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="false"
                android:fontFamily="@font/ubuntu_medium"
                android:imeOptions="actionNext"
                android:includeFontPadding="false"
                android:inputType="number"
                android:maxLines="1"
                android:textAlignment="center"
                android:textSize="24sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_belt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/ubuntu_bold"
            android:includeFontPadding="false"
            android:text="@string/belt"
            android:textColor="@color/main_color"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/el_belt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_assan" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/el_belt"
            style="@style/InputLayoutStyle"
            android:layout_width="201dp"
            android:layout_height="69dp"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.94"
            app:layout_constraintLeft_toRightOf="@id/tv_belt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/el_assan">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_belt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="false"
                android:fontFamily="@font/ubuntu_medium"
                android:imeOptions="actionNext"
                android:includeFontPadding="false"
                android:inputType="number"
                android:maxLines="1"
                android:textAlignment="center"
                android:textSize="24sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_thies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="58dp"
            android:fontFamily="@font/ubuntu_bold"
            android:includeFontPadding="false"
            android:text="@string/thies"
            android:textColor="@color/main_color"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/el_thies"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_belt" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/el_thies"
            style="@style/InputLayoutStyle"
            android:layout_width="201dp"
            android:layout_height="69dp"
            android:layout_marginTop="10dp"
            app:layout_constraintHorizontal_bias="0.94"
            app:layout_constraintLeft_toRightOf="@id/tv_thies"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/el_belt">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_thies"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="false"
                android:fontFamily="@font/ubuntu_medium"
                android:imeOptions="actionDone"
                android:includeFontPadding="false"
                android:inputType="number"
                android:maxLines="1"
                android:textAlignment="center"
                android:textSize="24sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        style="@style/MaterialButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/save"
        android:layout_gravity="bottom"/>

</LinearLayout>