<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/rv_bg_shape">

    <TextView
        android:id="@+id/tv_employeeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_bold"
        android:padding="16dp"
        android:textColor="@color/white"
        android:layout_marginLeft="6dp"
        app:layout_constraintBottom_toTopOf="@id/tv_position"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="John Doe" />

    <TextView
        android:id="@+id/tv_position"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_medium"
        android:paddingStart="16dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:layout_marginLeft="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_employeeName"
        tools:text="Master" />

    <TextView
        android:id="@+id/tv_employeeSalary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_medium"
        android:padding="16dp"
        android:layout_marginLeft="24dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/tv_employeeDate"
        app:layout_constraintLeft_toRightOf="@id/tv_employeeName"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="20000" />

    <TextView
        android:id="@+id/tv_employeeDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_medium"
        android:paddingStart="16dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="32dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_position"
        app:layout_constraintTop_toBottomOf="@id/tv_employeeSalary"
        tools:text="01/Jan/2021" />

</androidx.constraintlayout.widget.ConstraintLayout>